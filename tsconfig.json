{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "declarationDir": "./lib/types",
        "composite": true
    },
    "include": [
        "src/**/*"
    ]
}